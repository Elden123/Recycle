<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/homebackground"
    >

    <ImageButton
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_120sdp"
        android:id="@+id/pinIt"
        android:background="@drawable/pinit"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/_75sdp"
        android:layout_marginTop="@dimen/_55sdp"
        android:clickable="true" />

    <ImageButton
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_120sdp"
        android:id="@+id/recycleBin"
        android:layout_weight="1"
        android:background="@drawable/recyclebin"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_55sdp"
        android:layout_marginRight="@dimen/_75sdp"
        android:clickable="true" />

    <ImageButton
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:id="@+id/settings"
        android:layout_weight="1"
        android:background="@drawable/settings"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_200sdp" />

    <EditText
        android:layout_width="@dimen/_190sdp"
        android:layout_height="@dimen/_35sdp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/Email"
        android:hint="E-mail"
        android:background="#ffffff"
        android:textColor="#010101"
        android:layout_marginTop="27dp"
        android:padding="@dimen/_5sdp"
        android:layout_below="@+id/settings"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="@dimen/_190sdp"
        android:layout_height="@dimen/_35sdp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:background="#ffffff"
        android:hint="Password"
        android:layout_marginTop="@dimen/_10sdp"
        android:password="true"
        android:layout_below="@+id/Email"
        android:layout_centerHorizontal="true"
        android:textColor="#010101" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/Login"
        android:textColor="#ffffff"
        android:background="#e9584a"
        android:clickable="true"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/Register"
        android:textColor="#ffffff"
        android:background="#e9584a"
        android:clickable="true"
        android:padding="@dimen/_10sdp"
        android:layout_alignTop="@+id/Login"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password" />
    />

</RelativeLayout><!-- From: file:/C:/Users/inspire314/Desktop/Apps/REAL%20APP/GoogleMapsApp/app/src/main/res/layout/home_page.xml -->