<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@mipmap/homebackground"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pinIt"
        android:background="@mipmap/pinit"
        android:adjustViewBounds="true"
        android:layout_above="@+id/settings"
        android:layout_toLeftOf="@+id/settings"
        android:layout_toStartOf="@+id/settings"
        android:layout_weight="1"
        android:layout_marginBottom="74dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recycleBin"
        android:layout_weight="1"
        android:background="@mipmap/recyclebin"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignTop="@+id/pinIt"
        android:layout_toRightOf="@+id/settings"
        android:layout_toEndOf="@+id/settings" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings"
        android:layout_weight="1"
        android:background="@mipmap/settings"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp" />
    />

</RelativeLayout>